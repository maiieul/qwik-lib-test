{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "declaration": true,
    "declarationDir": "lib-types",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "types": ["vite/client", "cypress", "node", "jest", "@testing-library/jest-dom", "@testing-library/cypress"]
  },
  "include": ["src", "cypress", "node_modules/cypress", "./cypress/**/*.ts", "./cypress.config.ts"],
  "exclude": ["node_modules", "./jest-setup.ts"]

}
